@model User
<div class="row" style="margin-top:70px;">
    <h3>Реєстрація користувача</h3>
    <form asp-action="Checkout" method="post" class="formhorizontal">
        <div class="form-group" style="margin-top:20px;">
            <label asp-for="name"></label>
            <div class="col-md-5">
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="textdanger"></span>
            </div>
        </div>
         <div class="form-group" style="margin-top:20px;">
            <label asp-for="surname"></label>
            <div class="col-md-5">
                <input asp-for="surname" class="form-control" />
                <span asp-validation-for="surname" class="textdanger"></span>
            </div>
        </div>
         <div class="form-group" style="margin-top:20px;">
            <label asp-for="address"></label>
            <div class="col-md-5">
                <input asp-for="address" class="form-control" />
                <span asp-validation-for="address" class="textdanger"></span>
            </div>
        </div>
         <div class="form-group" style="margin-top:20px;">
            <label asp-for="phone"></label>
            <div class="col-md-5">
                <input asp-for="phone" class="form-control" />
                <span asp-validation-for="phone" class="textdanger"></span>
            </div>
        </div>
         <div class="form-group" style="margin-top:20px;">
            <label asp-for="email"></label>
            <div class="col-md-5">
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="textdanger"></span>
            </div>
        </div>
         <div class="form-group" style="margin-top:20px;">
            <label asp-for="password"></label>
            <div class="col-md-5">
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="textdanger"></span>
            </div>
        </div>
         <div class="form-group" style="margin-top:20px;">
            <label>Повторіть пароль</label>
            <div class="col-md-5" >
                @Html.TextBox("password2")
                <span class="textdanger"></span>
            </div>
        </div>
        <input class="btn btn-success" asp-controller="Registration" asp-action="User" type="submit" value="Зареєструватися" style="margin-top:20px;" />
    </form>
</div>

