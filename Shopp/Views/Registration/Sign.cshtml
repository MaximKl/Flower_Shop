@model User
<div class="row" style="margin-top:70px;">
    <h3>Вхід в акуаунт</h3>
    <form asp-action="Checkout" method="post" class="formhorizontal">
         <div class="form-group" style="margin-top:20px;">
            <label asp-for="email"></label>
            <div class="col-md-5">
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="textdanger"></span>
            </div>
        </div>
         <div class="form-group" style="margin-top:20px;">
            <label>Ваш пароль</label>
            <div class="col-md-5">
                <input asp-for="password" class="form-control" />
                <span asp-validation-for="password" class="textdanger"></span>
            </div>
        </div>
        <input class="btn btn-success" asp-controller="Registration" asp-action="Sign" type="submit" value="Увійти" style="margin-top:20px;" />
    </form>
</div>